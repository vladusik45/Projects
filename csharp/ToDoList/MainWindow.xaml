<Window x:Class="Eghednevnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eghednevnik"
        mc:Ignorable="d"
        Title="Ежедневник" Height="1080" WindowState="Maximized" Width="1920" Loaded="Window_Loaded" Closed="Window_Closed" >
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#00AAFF" Offset="0"/>
                <GradientStop Color="#BFBAF9" Offset="0.4"/>
                <GradientStop Color="#F9BAC7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="540"/>
            <RowDefinition Height="540"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="960"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="Frame1" Background="#00AAFF" Opacity="0.5" Margin="30,30,30,30"/>
        <Viewbox Grid.Row="0" Grid.Column="0" Margin="320,10,0,30" >
            <Calendar FontFamily="Comic Sans MS" Foreground="Black" Background="#FFCCEDFD" />
        </Viewbox>
        <TextBlock Grid.Row="0" FontWeight="Bold" FontSize="40" HorizontalAlignment="Left" Margin="50,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Height="50" FontFamily="Comic Sans MS" TextAlignment="Center"><Run Text="Календарь"/></TextBlock>
        <Frame Grid.Column="1" x:Name="Frame2" Background="#BFBAF9" Opacity="0.5" Margin="30,30,30,41"/>
        <Rectangle Grid.Row="0" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="70" Margin="50,56,0,0" Grid.Column="1">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Resource/free-icon-task-9330546.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Frame Grid.Column="0" Grid.Row="1" x:Name="Frame3" Background="#F9BAC7" Opacity="0.5" Margin="30,30,30,30"/>

        <TextBox Grid.Column="1"  x:Name="Txt" Margin="50,173,50,50" Grid.RowSpan="2" FontFamily="Comic Sans MS" FontSize="20">
        </TextBox>
        <DataGrid Grid.Row="1" Grid.Column="0" x:Name="spisok" FontSize="16" FontFamily="Comic Sans" Margin="50, 120, 50, 50" AutoGenerateColumns="False" BorderBrush="{x:Null}" Background="#FFF5F5FF" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding ="{Binding Path = creationDate}" IsReadOnly="True" Header="Дата" Width="180" FontFamily="Comic Sans MS"/>
                <DataGridTextColumn Binding ="{Binding Path = text1}" IsReadOnly="False" Header="Дела" Width="*" FontFamily="Comic Sans MS"/>
                <DataGridCheckBoxColumn Binding ="{Binding Path = isDone1, UpdateSourceTrigger = PropertyChanged}" Header="Выполненность" IsReadOnly="False" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Grid.Column="0" Margin="0,992,292,10" FontFamily="Comic Sans MS" Cursor="Pen" FontStyle="Italic" TextAlignment="Center" LineHeight="9" FontSize="40" FontWeight="Bold"><Run Text="Don't memorize - write it down!"/></TextBlock>
        <Rectangle Grid.Row="0" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="70" Margin="65,49,0,0">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Resource/free-icon-calendar-55281.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock Grid.Column="1" Grid.Row="0" FontWeight="Bold" FontSize="40" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="145,57,0,0" Width="180" FontFamily="Comic Sans MS" TextAlignment="Center" ><Run Text="Заметки"/></TextBlock>
        <Rectangle Grid.Row="1" Grid.Column="0" Height="70" Margin="835,36,55,434" Width="70">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Resource/free-icon-notepad-1483205.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="dte" Margin="740,66,78,439" Text="дд/мм/гггг" FontFamily="Comic Sans MS" FontSize="24"/>
        <TextBlock Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="40" HorizontalAlignment="Left" Margin="565,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" Height="54" FontFamily="Comic Sans MS" TextAlignment="Center"><Run Text="Список дел"/></TextBlock>
    </Grid>
</Window>
